    include head

  body
    include nav
    include sidebar
    .main
      block content
    
    script(src= url_for('js/darkLightToggle.js'))
    script(src= url_for('js/jquery-migrate-1.2.1.min.js'))
    script(src= url_for('js/jquery.appear.js'))
    script(src=url_for("/js/add-bookmark.js"))
